<h2></h2>

<div class="container">
    <div class="row">
        <h3>Comments:</h3>
        <div class="column">
            <table class="table">
                <tbody class="comments">
                <% Comment.all.each do |comment| %>
                    <tr>
                        <td>
                            <p><%= User.find_by(id: comment.user_id).name %> wrote:</p>
                        </td>
	                    <td id="name">
	                        <p><%= comment.text %></p>
	                    </td>
                        <td>
	                        <% if current_user.id == comment.user_id %>
                                <%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %>
		                    <% end %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>