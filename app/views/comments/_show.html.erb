<div class="container">
    <div class="row">
        <h3>Comments:</h3>
        <div class="column">
            <table class="table">
                <tbody>
	                <% @comments.zip(@users) do |comment, user| %>
	                    <tr>
	                        <td>
	                            <p><%= user.name %> wrote:</p>
	                        </td>
	                        <td>
	                            <p><%= comment.text %></p>
	                        </td>
	                        <td>
	                            <% if current_user.id == comment.user_id %>
	                                <%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %>
	                            <% end %>
	                        </td>
	                    </tr>
	                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>