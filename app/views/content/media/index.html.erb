<div class="container">
	<div class="row">
        <h3>Media:</h3>
        <div class="column">
            <table class="table">
                <tbody>
	                <% media.each do |medium| %>
	                    <tr>
		                    <td>
		                        <%= link_to medium_path(medium) do %>
	                                <%= image_tag medium.image_video.url(:thumb) %>
	                            <% end %>
		                    </td>
		                    <td>
		                        <% if current_user.id == medium.user_id %>
		                            <%= link_to 'Delete', medium_path(medium), method: :delete, data: { confirm: 'Are you sure?' } %>
		                        <% end %>
		                    </td>
	                    </tr>
	                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<br><%= link_to 'Upload new media', new_medium_path %>
