<h1>Upload a new file</h1>

<div class="authform">
    <%= form_for medium, :url => media_path, :html => { :multipart => true } do |form| %>
		<div class="form-group">
		    <%= label_tag 'Text: ' %>
		    <%= text_field :medium, :text, class: 'form-control' %>
		</div>
		<div class="form-group">
		    <%= label_tag 'Choose a file to upload: ' %>
		    <%= form.file_field :image_video %><br>
		</div>
		<div class="form-group">
		    <%= form.submit 'Upload media', class: 'button left' %>
		</div>
    <% end %>
</div>

